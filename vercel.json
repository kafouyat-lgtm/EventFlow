{
  "version": 2,
  "framework": null,
  "buildCommand": "echo 'Static site - no build required'",
  "outputDirectory": "public",
  "installCommand": "echo 'No dependencies to install for static site'",
  "functions": {},
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/events.json",
      "dest": "/events.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/events.json",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/json"
        }
      ]
    }
  ]
}