{
  "name": "eventflow",
  "type": "module",
  "description": "EventFlow - Plateforme d'événements corporate nationaux et internationaux",
  "version": "1.0.0",
  "author": "EventFlow Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=eventflow-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name eventflow",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:create": "wrangler d1 create eventflow-production",
    "db:migrate:local": "wrangler d1 migrations apply eventflow-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply eventflow-production",
    "db:seed": "wrangler d1 execute eventflow-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute eventflow-production --local",
    "db:console:prod": "wrangler d1 execute eventflow-production",
    "start": "node server.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "serve": "node server.js",
    "stop": "pm2 stop eventflow",
    "restart": "pm2 restart eventflow",
    "logs": "pm2 logs eventflow --nostream",
    "status": "pm2 status",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "express": "^4.21.2",
    "hono": "^4.9.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vercel": "^47.0.1",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
